{
	"files.associations": {
		"*.common": "makefile",
		"*.user": "makefile",
		"*.posix": "makefile",
		"*.windows": "makefile",
		"*.ld": "mapfile",
		"*.h": "c",
		"*.c": "c",
	},
	"cortex-debug.variableUseNaturalFormat": true,
	// "terminal.integrated.cwd": "./armgcc",
	"files.exclude": {
		"**/.git": true,
		"*.gitignore": true
	},
	"editor.insertSpaces": false,
	"editor.tabSize": 3,
	"editor.detectIndentation": false,
	"editor.formatOnSave": true,
	"editor.renderWhitespace": "all",
	"editor.lineHeight": 1.2,
	"editor.fontSize": 15,
	"editor.stickyScroll.enabled": false,
	"taskexplorer.specialFolders.showLastTasks": false,
	"taskexplorer.specialFolders.showFavorites": false,
	"taskexplorer.taskButtons.clickAction": "Execute",
	"taskexplorer.enabledTasks": {
		"make": false,
		"python": false
	},
	"task.saveBeforeRun": "always",
	"task.quickOpen.history": 0,
	"debug.internalConsoleOptions": "openOnSessionStart",
	"debug.console.closeOnEnd": true,
	"debug.focusWindowOnBreak": true,
	"debug.saveBeforeStart": "allEditorsInActiveGroup",
	"debug.terminal.clearBeforeReusing": true,
	"debug.inlineValues": "auto",
	"cSpell.enabled": false,
	"cSpell.language": "en,ru",
	"cSpell.words": [],
	"breadcrumbs.symbolSortOrder": "name",
	"cmake.ignoreCMakeListsMissing": true,
}